{
  "name": "vite-plugin-version-bumper",
  "version": "1.0.0",
  "description": "A Vite plugin to bump version suffixes in source code.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "vite-bumper": "./bin/cli.mjs"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "vite": "^2.0.0 || ^3.0.0 || ^4.0.0 || ^5.0.0 || ^6.0.0"
  },
  "dependencies": {
    "glob": "^10.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "vite",
    "plugin",
    "version",
    "bump",
    "cache-busting",
    "automation"
  ],
  "author": "Steven J. Selcuk <steven@tabbythecat.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/stevenselcuk/vite-plugin-version-bumper.git"
  }
}